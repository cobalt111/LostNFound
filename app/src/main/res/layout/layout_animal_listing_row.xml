<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="93dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp">


            <ImageView
                android:id="@+id/listingsImageView"
                android:layout_width="81dp"
                android:layout_height="87dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp" />
            <!--android:background="@mipmap/corgi_sit" />-->

            <TextView
                android:id="@+id/listingsNameView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/listingsImageView"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/listingsTypeView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignStart="@+id/listingsNameView"
                android:layout_below="@+id/listingsNameView"
                android:layout_marginTop="5dp"
                android:textSize="15sp" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
