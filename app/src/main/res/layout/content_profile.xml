<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/profileType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/profile_type" />

        <TextView
            android:id="@+id/profilePicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="@string/profile_picture" />

    </RelativeLayout>

    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/profilePhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.11"
            android:text="@string/profile_phone"
            android:layout_marginTop="114dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/profileColor" />

        <TextView
            android:id="@+id/profileLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.11"
            android:text="@string/profile_location"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/profileName"
            android:layout_marginTop="23dp" />

        <TextView
            android:id="@+id/profileDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.28"
            android:text="@string/profile_date"
            android:layout_marginTop="11dp"
            android:layout_below="@+id/profileLocation"
            android:layout_alignStart="@+id/profileLocation" />

        <TextView
            android:id="@+id/profileDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.23"
            android:text="@string/profile_description"
            android:layout_alignBaseline="@+id/profileLocation"
            android:layout_alignBottom="@+id/profileLocation"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/profileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_name"
            android:layout_marginStart="141dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/profileEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.13"
            android:text="@string/profile_email"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/profilePhone"
            android:layout_marginTop="141dp" />

        <TextView
            android:id="@+id/profileFound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/profileColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.17"
            android:text="@string/profile_color"
            android:layout_marginTop="18dp"
            android:layout_below="@+id/profileDate"
            android:layout_alignStart="@+id/profileDate" />
    </RelativeLayout>

    <Button
        android:id="@+id/profileFoundButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Button" />

    <Button
        android:id="@+id/profileFindLocationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/profileFoundButton"
        android:layout_below="@+id/profileFoundButton"
        android:layout_marginTop="35dp"
        android:text="Button" />

</RelativeLayout>